{
  "info": {
    "name": "Novel Reading App API",
    "description": "API collection for Novel Reading App backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Novel",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Novel\",\n  \"description\": \"This is a sample novel description for testing purposes.\",\n  \"authorName\": \"Test Author\",\n  \"coverImage\": \"https://example.com/cover.jpg\",\n  \"categories\": [\"FANTASY\", \"ROMANCE\"],\n  \"rating\": 4.5,\n  \"wordCount\": 100000,\n  \"chapterCount\": 50,\n  \"authorId\": \"author123\",\n  \"status\": \"ONGOING\",\n  \"isR18\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/novels",
          "host": ["{{baseUrl}}"],
          "path": ["novels"]
        }
      }
    },
    {
      "name": "Get All Novels",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels?page=0&size=10",
          "host": ["{{baseUrl}}"],
          "path": ["novels"],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Get Novel by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/{{novelId}}",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "{{novelId}}"]
        }
      }
    },
    {
      "name": "Search Novels",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample\",\n  \"categories\": [\"FANTASY\"],\n  \"status\": \"ONGOING\",\n  \"minRating\": 4.0,\n  \"sortBy\": \"rating\",\n  \"sortDirection\": \"desc\",\n  \"page\": 0,\n  \"size\": 10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/novels/search",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "search"]
        }
      }
    },
    {
      "name": "Update Novel",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Novel Title\",\n  \"description\": \"Updated description\",\n  \"rating\": 4.8,\n  \"status\": \"COMPLETED\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/novels/{{novelId}}",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "{{novelId}}"]
        }
      }
    },
    {
      "name": "Increment View Count",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/{{novelId}}/view",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "{{novelId}}", "view"]
        }
      }
    },
    {
      "name": "Increment Follow Count",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/{{novelId}}/follow",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "{{novelId}}", "follow"]
        }
      }
    },
    {
      "name": "Update Rating",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/{{novelId}}/rating?rating=4.5",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "{{novelId}}", "rating"],
          "query": [
            {
              "key": "rating",
              "value": "4.5"
            }
          ]
        }
      }
    },
    {
      "name": "Get Top Novels by View Count",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/top/view-count",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "top", "view-count"]
        }
      }
    },
    {
      "name": "Get Top Novels by Rating",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/top/rating",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "top", "rating"]
        }
      }
    },
    {
      "name": "Get Recently Updated Novels",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/recent",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "recent"]
        }
      }
    },
    {
      "name": "Delete Novel",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/novels/{{novelId}}",
          "host": ["{{baseUrl}}"],
          "path": ["novels", "{{novelId}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api"
    },
    {
      "key": "novelId",
      "value": "your-novel-id-here"
    }
  ]
}
